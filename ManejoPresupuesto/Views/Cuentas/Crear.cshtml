@model CuentaCreacionViewModel
@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>Crear Cuenta</h1>
<h5>
    La cuenta se refiere a los distintos balances que tienes:
    Préstamos, tarjetas de crédito, cuentas de ahorro, etc.
</h5>

<form asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Nombre" placeholder="Ingresa tu nombre">
        <label asp-for="Nombre"></label>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TipoCuentaId" class="form-label"></label>
        <select asp-for="TipoCuentaId" class="form-control" asp-items="Model.TiposCuentas">
            <option>--Seleccione--</option>
        </select>
        <span asp-validation-for="TipoCuentaId" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Balance" >
        <label asp-for="Balance"></label>
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <<textarea asp-for="Descripcion" class="form-control" rows="6" style="height: 100px; resize:none;"></textarea>
        <label asp-for="Descripcion"></label>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}